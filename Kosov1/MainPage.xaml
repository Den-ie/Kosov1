<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kosov1.MainPage">

    <ScrollView>
        <StackLayout Spacing="10" Padding="5">
            <Frame>
                <Label x:Name="SelectedText" FontSize="24" TextColor="Blue"/>
            </Frame>

            <ListView x:Name="ItemsList" 
                      ItemSelected="SelectIt">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="18"/>
                                <StackLayout Orientation="Horizontal" Spacing="15">
                                    <Label Text="{Binding Teacher}"/>
                                    <StackLayout Orientation="Horizontal" Spacing="5">
                                        <Label Text="{Binding ClassNumber}"/>
                                        <Label Text="кабинет"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal" Spacing="5">
                                        <Label Text="{Binding HoursAmount}"/>
                                        <Label Text="часов"/>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Entry x:Name="Find"/>

            <HorizontalStackLayout Spacing="10" Padding="10">
                <StackLayout Spacing="10">
                    <Button Text="Сохранить"
                    FontSize="16"
                    Clicked="Save"
                    WidthRequest="160"/>

                    <Button Text="Загрузить"
                    FontSize="16"
                    Clicked="Load" WidthRequest="160"/>

                    <Button Text="Удалить"
                    FontSize="16"
                    Clicked="Delete" WidthRequest="160"/>
                </StackLayout>

                <StackLayout Spacing="10">
                    <Button Text="Найти"
                    FontSize="16"
                    Clicked="FindClass" WidthRequest="160"/>

                    <Button Text="Добавить"
                    FontSize="16" WidthRequest="160"/>

                    <Button Text="Редактировать"
                    FontSize="16" WidthRequest="160"/>
                </StackLayout>
            </HorizontalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>